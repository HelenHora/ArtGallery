CREATE TABLE OH_Customers (
ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
Firstname VARCHAR(30) NOT NULL,
Lastname VARCHAR(30) NOT NULL,
Country VARCHAR (30) NOT NULL,
PRIMARY KEY (ID))
TABLESPACE OLENAHOROBETS;

CREATE TABLE OH_Periods (
ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
Name VARCHAR(40) NOT NULL,
PRIMARY KEY (ID))
TABLESPACE OLENAHOROBETS;

CREATE TABLE OH_Birthplaces (
ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
Country VARCHAR(30) NOT NULL,
City VARCHAR(40) NOT NULL,
PRIMARY KEY (ID))
TABLESPACE OLENAHOROBETS;



CREATE TABLE OH_Artists (
ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
Firstname VARCHAR(50) NOT NULL,
Lastname VARCHAR(50) NOT NULL,
ID_Birthplace INT NOT NULL,
PRIMARY KEY (ID),
FOREIGN KEY (ID_Birthplace) REFERENCES OH_Birthplaces(ID))
TABLESPACE OLENAHOROBETS;


CREATE TABLE OH_Artworks (
ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
ID_Artist INT NOT NULL,
Title VARCHAR(60) NOT NULL,
YearOfWork INT NOT NULL,
ID_Period INT NOT NULL,
Price INT NOT NULL,
PRIMARY KEY (ID),
FOREIGN KEY (ID_Artist) REFERENCES OH_Artists(ID),
FOREIGN KEY (ID_Period) REFERENCES OH_Periods(ID))
TABLESPACE OLENAHOROBETS;




CREATE TABLE OH_Purchases (
ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
ID_Customer INT NOT NULL, 
ID_Artwork INT NOT NULL, 
DateOfPurchase DATE NOT NULL,
PurchPrice INT NOT NULL,
PRIMARY KEY (ID),
FOREIGN KEY (ID_Customer) REFERENCES OH_Customers(ID),
FOREIGN KEY (ID_Artwork) REFERENCES OH_Artworks(ID))
TABLESPACE OLENAHOROBETS;



Create TABLE OH_PurchStat (
ID INT GENERATED ALWAYS AS IDENTITY NOT NULL,
PYearOfPurchases INT NOT NULL,
PYearOfWork INT NOT NULL,
PName VARCHAR (40) NOT NULL,
PPurchPrice INT NOT NULL,
ACountry VARCHAR (30) not null ,
CCountry VARCHAR (30) not null,
PRIMARY KEY (ID))
TABLESPACE OLENAHOROBETS;
